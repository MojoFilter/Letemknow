@using System.Net;
@using Letemknow.Shared;
@inherits LinkComponent
<a @onclick="OnClick" class="btn btn-info" target="_blank">GMail</a>
@code {
    protected override string LinkUri =>
    $"https://mail.google.com/mail/?view=cm&fs=1&to={Mail?.Recipient}t&su={Link.Escape(Mail?.Subject)}&body={Link.Escape(Mail?.Body)}";

    protected override ClickTarget Target => ClickTarget.Gmail;

}
