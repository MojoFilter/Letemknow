@using System.Net;
@using Letemknow.Shared;
@inherits LinkComponent
<a @onclick="OnClick" class="btn btn-info" target="_blank">Yahoo</a>
@code {
    protected override string LinkUri =>
    $"https://compose.mail.yahoo.com/?to={Mail?.Recipient}&subject={Link.Escape(Mail?.Subject)}&body={Link.Escape(Mail?.Body)}";

    protected override ClickTarget Target => ClickTarget.Yahoo;
}

